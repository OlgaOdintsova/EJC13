package com.epam.classwork.studyEnum;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.Objects;

public class NameKitten {

    public static void main(String[] args) {
        NameKitten kitty = new NameKitten();

        System.out.print("Enter the name of kitten: ");
        try (BufferedReader reader = new BufferedReader(new InputStreamReader(System.in))) {
            System.out.println(kitty.getName(reader.readLine()));
        } catch (IOException e) {
            e.printStackTrace();
        }
    }

    String getName(String nameKitten) {
        for (Kitten name : Kitten.values()) {
            if (Objects.equals(name.toString(), nameKitten)) {
                return nameKitten + " come at home";
            }
        }

        throw new IllegalArgumentException("Wrong kitten name " + nameKitten);

    }

}
